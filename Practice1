                Console.WriteLine("Enter Phone Number: ");
                string pn = Console.ReadLine();
                string stmt = "insert into Employees(Employee_ID, Name, UserName, Password, Email_ID, Phone_No) values (@Employee_ID, @Name, @UserName, @Password, @Email_ID, @Phone_No)";
                SqlCommand cmd = new SqlCommand(stmt, conn);
                cmd.Parameters.AddWithValue("@Employee_ID", id);
                cmd.Parameters.AddWithValue("@Name", nm);
                cmd.Parameters.AddWithValue("@UserName", un);
                cmd.Parameters.AddWithValue("@Password", pw);
                cmd.Parameters.AddWithValue("@Email_ID", ed);
                cmd.Parameters.AddWithValue("@Phone_No", pn);
                int flag = cmd.ExecuteNonQuery();
                Console.WriteLine(flag);
                num--;
